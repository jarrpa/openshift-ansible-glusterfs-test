[OSEv3:children]
masters
nodes
glusterfs

[OSEv3:vars]
ansible_ssh_user=root
deployment_type=origin
openshift_hosted_registry_storage_kind=glusterfs

[masters]
master  master=True

[nodes]
node0  openshift_schedulable=True openshift_node_labels="{'region': 'infra'}"
node1  openshift_schedulable=True openshift_node_labels="{'region': 'infra'}"
node2  openshift_schedulable=True openshift_node_labels="{'region': 'infra'}"

[glusterfs_registry]
node0  glusterfs_devices='[ "/dev/sdb", "/dev/sdc", "/dev/sdd" ]'
node1  glusterfs_devices='[ "/dev/sdb", "/dev/sdc", "/dev/sdd" ]'
node2  glusterfs_devices='[ "/dev/sdb", "/dev/sdc", "/dev/sdd" ]'
